Tabela confAreas

CREATE TABLE confAreas (
confAreaID SERIAL primary KEY,
confAreaName VARCHAR(200) NOT NULL
);
___________________________________________________________________________________________________________
Tabela ConferÃªncias


CREATE TABLE conferences (
conferenceID SERIAL primary KEY,
conferenceName VARCHAR(200) NOT NULL,
conferenceStartDate DATE,
conferenceEndDate DATE,
conferenceStartSubmission DATE,
conferenceEndSubmission DATE,
conferenceStartReview DATE,
conferenceEndReview DATE,
conferenceStartBidding DATE,
conferenceEndBidding DATE,
conferenceType INT,
conferenceArea INT,
FOREIGN KEY (conferenceArea) REFERENCES confAreas(confAreaID),
conferenceMaxReviewers INT,
conferenceMinReviewers INT,
conferenceMaxSubmissions INT,
conferenceCode VARCHAR(200)
);
___________________________________________________________________________________________________________
Tabela Submissions

CREATE TABLE submissions(
submissionID SERIAL primary KEY,
confID INT,
FOREIGN KEY (confID) REFERENCES conferences(conferenceID),
submissionAccepted BOOLEAN DEFAULT false
);

___________________________________________________________________________________________________________
Tabela userRoles

CREATE TABLE userRoles(
userRoleID SERIAL primary KEY,
userID INT,
FOREIGN KEY (userID) REFERENCES users(userID),
userRole VARCHAR(200),
confID INT,
FOREIGN KEY (confID) REFERENCES conferences(conferenceID)
);
___________________________________________________________________________________________________________
Tabela userSpecialty

CREATE TABLE userRoles(
userRoleID SERIAL primary KEY,
userID INT,
FOREIGN KEY (userID) REFERENCES users(userID),
userRole VARCHAR(200),
confID INT,
FOREIGN KEY (confID) REFERENCES conferences(conferenceID)
);
___________________________________________________________________________________________________________
Tabela Reviews

CREATE TABLE reviews(
reviewID SERIAL primary KEY,
submissionID INT,
FOREIGN KEY (submissionID) REFERENCES submissions(submissionID),
reviewGrade INT,
userID INT,
FOREIGN KEY (userID) REFERENCES users(userID),
reviewConfidant INT,
reviewText VARCHAR(200)
);
___________________________________________________________________________________________________________
Tabela Files

CREATE TABLE files(
fileID SERIAL primary KEY,
fileName VARCHAR(200),
submissionID INT,
FOREIGN KEY (submissionID) REFERENCES submissions(submissionID),
);

___________________________________________________________________________________________________________
Tabela Authors

CREATE TABLE authors(
authorID SERIAL primary KEY,
userID INT,
FOREIGN KEY (userID) REFERENCES users(userID),
submissionID INT,
FOREIGN KEY (submissionID) REFERENCES submissions(submissionID)
);
___________________________________________________________________________________________________________
Tabela Areas

CREATE TABLE areas(
areaID SERIAL primary KEY,
areaName VARCHAR(200)
);
